@model Models.Movie

<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
        <a href="@Url.Action("MovieDetails", "Movie", @Model)"><img class="card-img-top" img src="~/Thumbnails/Avengers.jpg" alt=""></a>
        <div class="card-body">
            <h4 class="card-title">
                <a href="@Url.Action("MovieDetails", "Movie", @Model)">@Model.Title</a>
            </h4>
            <p class="card-text"> @string.Join(", ", @Model.Genre)</p>
        </div>
    </div>
</div>