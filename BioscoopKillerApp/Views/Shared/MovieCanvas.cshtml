@model Models.Movie

<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
        <a href="@Url.Action("MovieDetails", "Movie", @Model)"><img class="card-img-top" img src=@Model.Poster alt=""></a>
        <div class="card-body">
            <p class="card-title" style="font-size: 20px;">
                <a href="@Url.Action("MovieDetails", "Movie", @Model)">@Model.Title</a>
            </p>
            <p class="card-text"> @string.Join(", ", @Model.Genre)</p>
        </div>
    </div>
</div>

<script>
    var text = @Model.Title;
    text.truncate()
</script>