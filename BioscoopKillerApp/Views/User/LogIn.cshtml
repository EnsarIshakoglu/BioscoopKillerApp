@model Models.User
@{
    ViewData["Title"] = "LogIn";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="~/lib/bootstrap/dist/css/User/user-login-bootstrap.css" rel="stylesheet" />
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container login-container">

    <div class="row">

        <div class="col-md-6 login-form-1">
            <form asp-action="LogIn">
                <h3>Login</h3>

                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Username" name="Username" placeholder="Username" value="" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" asp-for="Password" name="Password" placeholder="Password" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmitLogin" value="Login" />
                </div>
                <div class="form-group">
                    <a href="#" class="btnForgetPwd">Forget Password?</a>
                </div>
            </form>
        </div>

        <div class="col-md-6 login-form-2">
            <div class="login-logo">
                <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
            </div>
            <h3>Don't have an account?</h3>
            <div class="form-group">
                <input type="text" class="form-control" asp-for="Email" placeholder="Email" value="" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" asp-for="Username" placeholder="Username" value="" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" asp-for="Password" placeholder="Password" value="" />
            </div>
            <div class="form-group">
                <input type="submit" class="btnSubmitCreateAccount" value="Create Account" />
            </div>
        </div>
    </div>

</div>

